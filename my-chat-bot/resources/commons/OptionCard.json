{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Great! Please select any option to continue...",
                    "wrap": true,
                    "spacing": "None",
                    "fontType": "Default",
                    "size": "Large",
                    "weight": "Default"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Start a new survey",
                            "data":{
                                "name":"new_survey"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Check Status & Details",
                    "data":{
                        "name":"status_details"
                    }
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Edit your Survey",
                    "data":{
                        "name":"edit"
                    }
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Delete your Survey",
                    "data":{
                        "name":"delete_survey"
                    }
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Cancel",
                    "data":{
                        "name":"cancel_survey"
                    }
                }
            ]
        }
    ]
}